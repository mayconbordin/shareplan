<!DOCTYPE html>
<html>
	<head>
		<%= yield :title %>
		<meta charset="UTF-8">
		<meta name="description" content="">
		<meta name="author" content="">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
	
		<!-- CSS Styles -->
		<%= yield :styles %>
		
		<%= csrf_meta_tag %>
	</head>
	<body>
		<!-- Wrapper -->
		<div id="wrapper">
			
			<!-- Sidebar -->
			<div id="sidebar">
