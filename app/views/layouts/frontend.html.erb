			</div>
			<!-- Sidebar -->
			
			<!-- Content -->
			<div id="content">
			
				<%= yield %>
				
			</div>
			<!-- Content -->
			
		</div>
		<!-- Wrapper -->
		
		<!-- JS Scripts -->
		<%= yield :scripts %>
		
